.main-show
  = render ('modules/header')
  %h1 Post details
  .main-show-content
    -# %h3= @post.user.email
    %h3= @post.content
    %h3
      いいね件数: #{@post.likes.count}
    - if current_user.already_liked?(@post)
      = button_to 'いいねを取り消す', post_like_path(@post), method: :delete
    - else
      = button_to 'いいね', post_likes_path(@post)
    %h2 Liked Users
    - @post.liked_users.each do |user|
      %li= user.nickname
    - if user_signed_in? && current_user.id == @post.user_id
      = link_to "編集", edit_post_path(@post.id), class: "postManage__edit"
  = render ('modules/footer')